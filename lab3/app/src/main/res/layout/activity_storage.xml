<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StorageActivity" android:orientation="vertical">

    <ScrollView android:layout_width="match_parent" android:layout_height="480dp" tools:ignore="MissingConstraints">
        <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/storage_context"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="21dp"
                android:text=""/>

    </ScrollView>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="20dp"

        >

    <Button
            android:id="@+id/back_btn"
            android:text="BACK"
            android:textColor="@android:color/white"
            android:background="#3B5862"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"

            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/clear_storage_btn"
            android:text="CLEAR"
            android:textColor="@android:color/white"
            android:background="#3B5862"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"/>
    </LinearLayout>

</LinearLayout>
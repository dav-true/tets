<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="380dp"
             tools:context=".FragmentMain">

    <TextView android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="#2BB921"
              android:text="When was Kotlin created?"
              android:textSize="25dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
    />

    <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="100dp">

        <RadioButton
                android:id="@+id/first_var"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="In 1999"
                android:textSize="18dp"
                android:padding="10dp"
                tools:ignore="MissingConstraints"/>
        <RadioButton
                android:id="@+id/second_var"
                android:layout_width="wrap_content"
                android:text="In 2017"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>
        <RadioButton
                android:id="@+id/third_var"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In 2010"
                android:textSize="18dp"
                android:padding="10dp"
                tools:ignore="MissingConstraints"/>
        <RadioButton
                android:id="@+id/forth_var"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In 2005"
                android:textSize="18dp"
                android:padding="10dp"
                tools:ignore="MissingConstraints"/>
    </RadioGroup>

    <LinearLayout android:layout_width="wrap_content" android:layout_gravity="center"
                  android:layout_height="wrap_content" android:layout_marginTop="120dp">
        <Button android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:background="#D8300C"
                android:textSize="20dp"
        />

        <Button
                android:id="@+id/check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:background="#2BB921"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="30dp"
        />
        <Button
                android:id="@+id/storage_btn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:background="#3B5862"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="30dp"/>

    </LinearLayout>


</FrameLayout>